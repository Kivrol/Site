@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>


<a asp-controller="Admin" asp-action="CreateRole">Create Role</a>
<table class="table ">
    <thead>
        <tr>
            <th>
                Role Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="EditRole" asp-route-id="@item.Id">Edit Role</a>
                </td>

            </tr>
        }
    </tbody>
</table>
