@model PShop.Models.Item

@{
    ViewData["Title"] = "Edit";
}

@{

    var tags = ViewData["Tags"] as List<Tag>;
    SelectList tagsSelectList = tags != null ? new SelectList(tags, "tag", "tag") : null;
}
@if (User.IsInRole("Admin"))
{
    <h1>Edit</h1>

    <h4>Item</h4>
    <hr />
    <div class="row">
        <div class="col-md-4"  >
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Characteristics" class="control-label"></label>
                    <textarea style="background-color: #ffffff" class="form-control " asp-for="Characteristics" id="exampleFormControlTextarea1" rows="5"></textarea>
                    <span asp-validation-for="Characteristics" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sale" class="control-label"></label>
                    <input asp-for="Sale" class="form-control" />
                    <span asp-validation-for="Sale" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Vid" class="control-label"></label>
                    <input asp-for="Vid" class="form-control" />
                    <span asp-validation-for="Vid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Img" class="control-label"></label>
                    <input asp-for="Img" class="form-control" />
                    <span asp-validation-for="Img" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Img2" class="control-label"></label>
                    <input asp-for="Img2" class="form-control" />
                    <span asp-validation-for="Img2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Img3" class="control-label"></label>
                    <input asp-for="Img3" class="form-control" />
                    <span asp-validation-for="Img3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Img4" class="control-label"></label>
                    <input asp-for="Img4" class="form-control" />
                    <span asp-validation-for="Img4" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Img5" class="control-label"></label>
                    <input asp-for="Img5" class="form-control" />
                    <span asp-validation-for="Img5" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Тэги</label>
                    <select asp-for="Tag1" class="form-control" asp-items="@tagsSelectList"></select>
                    <select asp-for="Tag2" class="form-control" asp-items="@tagsSelectList"></select>
                    <select asp-for="Tag3" class="form-control" asp-items="@tagsSelectList"></select>
                    <span asp-validation-for="Tag1" class="text-danger"></span>
                    <span asp-validation-for="Tag2" class="text-danger"></span>
                    <span asp-validation-for="Tag3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

}
else
{
    <p>Access Denied</p>
    <a asp-controller="Home" asp-action="Index">Home</a>
}
